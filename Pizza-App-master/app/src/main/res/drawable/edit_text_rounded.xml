<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>         <!-- background color when focused -->
            <stroke android:width="2dp" android:color="#3F51B5"/> <!-- focused border color -->
            <corners android:radius="12dp"/>
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp"/>
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5"/>         <!-- disabled background -->
            <stroke android:width="1dp" android:color="#CCCCCC"/>
            <corners android:radius="12dp"/>
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp"/>
        </shape>
    </item>

    <!-- Default (normal) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>         <!-- normal background -->
            <stroke android:width="1dp" android:color="#BDBDBD"/> <!-- normal border color -->
            <corners android:radius="12dp"/>
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp"/>
        </shape>
    </item>

</selector>
