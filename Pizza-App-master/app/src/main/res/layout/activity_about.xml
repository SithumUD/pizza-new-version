<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".activities.AboutActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/backicon"
            android:layout_marginEnd="16dp"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="About Us"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <!-- Hero Section with Pizza Image -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/heroImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pizza"
                        android:scaleType="centerCrop"
                        android:contentDescription="Pizza Hero Image" />

                    <!-- Overlay -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/pizza" />

                    <!-- Hero Text -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The Pizza Mania"
                            android:textColor="@android:color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:shadowColor="#80000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Since 2010"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Our Story Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/white"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Our Story"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The Pizza Mania started as a small family-owned pizzeria in Colombo in 2010. With a passion for creating authentic, delicious pizzas using only the freshest ingredients, we quickly gained popularity among locals and tourists alike."
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Over the years, we've expanded to multiple branches across Sri Lanka, but our commitment to quality and taste has never wavered. Each pizza is still made with the same care and attention to detail as when we first opened our doors."
                        android:textSize="15sp"
                        android:textColor="#666666" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Our Mission Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Our Mission"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="At The Pizza Mania, our mission is simple: to bring joy through delicious food. We believe that a great pizza can turn any day around, and we're committed to providing our customers with the best pizza experience possible."
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We source our ingredients locally whenever possible, supporting local farmers and businesses while ensuring the freshest produce for our pizzas."
                        android:textSize="15sp"
                        android:textColor="#666666" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Our Locations Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Our Locations"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="20dp" />

                    <!-- Colombo City Center -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Colombo City Center"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="42 Park Street, Colombo 2"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Open 10:00 AM - 10:00 PM"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <!-- Kandy -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kandy"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="78 Temple Road, Kandy"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Open 10:00 AM - 10:00 PM"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Contact Us Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact Us"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Customer Service:"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="+94 11 234 5678"
                            android:textSize="14sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Email:"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="info@thepizzamania.com"
                            android:textSize="14sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Head Office:"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="42 Park Street, Colombo 2, Sri Lanka"
                            android:textSize="14sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Follow Us Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/white"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/white"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Follow Us"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/facebookIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/facebooklogo"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/chip_bg"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="Facebook" />

                        <ImageView
                            android:id="@+id/instagramIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/instalogo"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/chip_bg"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="Instagram" />

                        <ImageView
                            android:id="@+id/twitterIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/twitterlogo"
                            android:background="@drawable/chip_bg"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="Twitter" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>