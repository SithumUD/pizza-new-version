<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".activities.HelpActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/backicon"
            android:layout_marginEnd="16dp"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Help &amp; Support"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Tab Layout -->
    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <TextView
            android:id="@+id/faqTab"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="FAQs"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/selected_thumbnail_border"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/contactTab"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Contact Us"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- FAQ Content -->
            <LinearLayout
                android:id="@+id/faqContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- FAQ Item 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:id="@+id/faqItem1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="How do I track my order?"
                                android:textSize="16sp"
                                android:textColor="#333333"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/faq1Arrow"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/backicon"
                                android:contentDescription="Expand" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/faq1Answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="You can track your order by going to the Order History section in your profile, then selecting the specific order you want to track. You will see real-time updates on your order status."
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:visibility="gone" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- FAQ Item 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:id="@+id/faqItem2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="What are your delivery hours?"
                                android:textSize="16sp"
                                android:textColor="#333333"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/faq2Arrow"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/backicon"
                                android:contentDescription="Expand" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/faq2Answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Our delivery hours are from 10:00 AM to 10:00 PM, 7 days a week. We strive to deliver your delicious pizzas fresh and hot within 30-45 minutes of ordering."
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:visibility="gone" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- FAQ Item 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:id="@+id/faqItem3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="How can I modify or cancel my order?"
                                android:textSize="16sp"
                                android:textColor="#333333"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/faq3Arrow"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/backicon"
                                android:contentDescription="Expand" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/faq3Answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="You can modify or cancel your order within 5 minutes of placing it. Go to your Order History, select the active order, and choose 'Modify' or 'Cancel'. After 5 minutes, please contact customer support."
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:visibility="gone" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- FAQ Item 4 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:id="@+id/faqItem4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Do you offer vegetarian options?"
                                android:textSize="16sp"
                                android:textColor="#333333"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/faq4Arrow"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/backicon"
                                android:contentDescription="Expand" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/faq4Answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Yes! We offer a wide variety of vegetarian pizzas including Margherita, Veggie Supreme, Mediterranean, and more. Look for the green 'V' symbol next to vegetarian items on our menu."
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:visibility="gone" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- FAQ Item 5 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:id="@+id/faqItem5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="What payment methods do you accept?"
                                android:textSize="16sp"
                                android:textColor="#333333"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/faq5Arrow"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/backicon"
                                android:contentDescription="Expand" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/faq5Answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="We accept all major credit cards (Visa, MasterCard, American Express), debit cards, PayPal, Apple Pay, Google Pay, and cash on delivery. Payment is secure and processed through encrypted channels."
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:visibility="gone" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- FAQ Item 6 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:id="@+id/faqItem6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="How do I redeem a promo code?"
                                android:textSize="16sp"
                                android:textColor="#333333"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/faq6Arrow"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/backicon"
                                android:contentDescription="Expand" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/faq6Answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="During checkout, look for the 'Promo Code' field and enter your code. The discount will be automatically applied to your order. Make sure to check the terms and conditions for each promo code."
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:visibility="gone" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Contact Us Content -->
            <LinearLayout
                android:id="@+id/contactContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:visibility="gone">

                <!-- Support Ticket Form -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Submit a Support Ticket"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Subject"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="4dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/edit_text_rounded"
                            app:boxStrokeColor="#E53935"
                            app:hintTextColor="#E53935">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/subjectEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:background="@color/white"
                                android:hint="What do you need help with?"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Message"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="4dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/edit_text_rounded"
                            app:boxStrokeColor="#E53935"
                            app:hintTextColor="#E53935">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/messageEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Please describe your issue in detail"
                                android:minLines="4"
                                android:maxLines="6"
                                android:background="@color/white"
                                android:textColor="@color/black"
                                android:gravity="top"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order Number (optional)"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="4dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:background="@drawable/edit_text_rounded"
                            app:boxStrokeColor="#E53935"
                            app:hintTextColor="#E53935">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/orderNumberEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:background="@color/white"
                                android:hint="If related to a specific order"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:id="@+id/submitTicketButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Submit Ticket"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:background="@drawable/chip_bg"
                            android:minHeight="48dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Contact Information -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:background="@color/white"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Contact Information"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="16dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Customer Support:"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="+94 11 234 5678"
                                android:textSize="14sp"
                                android:textColor="#333333" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Email:"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="support@thepizzamania.com"
                                android:textSize="14sp"
                                android:textColor="#333333" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Hours:"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="10:00 AM - 10:00 PM, 7 days a week"
                                android:textSize="14sp"
                                android:textColor="#333333" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Success Message (initially hidden) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/successCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/backicon"
                        android:layout_marginBottom="16dp"
                        android:contentDescription="Success" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ticket Submitted"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We've received your support request and will get back to you as soon as possible, typically within 24 hours."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:textAlignment="center"
                        android:layout_marginBottom="24dp" />

                    <Button
                        android:id="@+id/submitAnotherButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit Another Request"
                        android:textColor="@android:color/white"
                        android:background="@drawable/chip_bg"
                        android:minHeight="48dp"
                        android:paddingHorizontal="24dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>