<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".activities.admin.UserManageActivity">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#F06292"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/backicon"
            android:contentDescription="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Management"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Main Content Container -->
    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- User List View -->
        <LinearLayout
            android:id="@+id/userListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Filter Tabs and Add Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Filter Tabs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- All Tab -->
                    <TextView
                        android:id="@+id/tabAll"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="All"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/chip_bg"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true" />

                    <!-- Customer Tab -->
                    <TextView
                        android:id="@+id/tabCustomer"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Customer"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true" />

                    <!-- Staff Tab -->
                    <TextView
                        android:id="@+id/tabStaff"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Staff"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <!-- Top Bar with All Users and Add Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="All Users"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnAddUser"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ Add User"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/chip_bg"
                        android:paddingHorizontal="16dp"
                        android:minWidth="0dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- User List RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewUsers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="20dp"
                android:clipToPadding="false"
                tools:listitem="@layout/item_user" />

        </LinearLayout>

        <!-- Add/Edit User Form View -->
        <ScrollView
            android:id="@+id/userFormView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Form Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:id="@+id/tvFormTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Add New User"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnCloseForm"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/closeicon"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="4dp"
                        app:tint="#666666" />

                </LinearLayout>

                <!-- Profile Image Section -->
                <LinearLayout
                    android:id="@+id/profileImageSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change photo"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:drawablePadding="8dp"
                        app:drawableTint="#666666" />

                </LinearLayout>

                <!-- Full Name Input -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:boxStrokeWidth="1dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    android:background="@drawable/edit_text_rounded"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter full name"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="16sp"
                        android:padding="16dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email Input -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:boxStrokeWidth="1dp"
                    android:background="@drawable/edit_text_rounded"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter email address"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"
                        android:padding="16dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Phone Number Input -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:boxStrokeWidth="1dp"
                    android:background="@drawable/edit_text_rounded"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="+94 XX XXX XXXX"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:inputType="phone"
                        android:textSize="16sp"
                        android:padding="16dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- User Type Dropdown -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Type"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxCornerRadiusTopStart="8dp"
                    android:textColorHint="@color/black"
                    android:background="@drawable/edit_text_rounded"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerUserType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Customer"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:inputType="none"
                        android:focusable="false" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- staff branch Dropdown -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Staff User Branch"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/branchDropdownLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxCornerRadiusTopStart="8dp"
                    android:textColorHint="@color/black"
                    android:background="@drawable/edit_text_rounded"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerUserBranch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Both"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:inputType="none"
                        android:focusable="false" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Status Dropdown -->
                <TextView
                    android:id="@+id/tvStatusLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/statusDropdownLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"
                    android:background="@drawable/edit_text_rounded"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Active"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:inputType="none"
                        android:focusable="false" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Profile Image Upload Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Image"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/profileImageCard"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F0F0F0">

                        <ImageView
                            android:id="@+id/ivProfileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/ivProfilePlaceholder"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:src="@drawable/addicon"
                            app:tint="#CCCCCC" />

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click to upload a profile picture"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="32dp" />

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Cancel Button -->
                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Cancel"
                        android:textColor="#E91E63"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/chip_bg" />

                    <!-- Save Button -->
                    <Button
                        android:id="@+id/btnSaveUser"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Save User"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/chip_bg"
                        app:backgroundTint="#E91E63" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- User Detail View -->
        <ScrollView
            android:id="@+id/userDetailView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- User Header with Close Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tvUserDetailName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sachin Perera"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnCloseUserDetail"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/closeicon"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="4dp"
                        app:tint="#666666" />

                </LinearLayout>

                <!-- User Basic Info -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvDetailEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="sachin.p@email.com"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvDetailPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+94 71 234 5678"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvDetailUserType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Customer"
                                android:textColor="#E91E63"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:layout_marginEnd="8dp" />

                            <!-- Add this after tvDetailUserType in the user detail view -->
                            <TextView
                                android:id="@+id/tvDetailBranch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Branch: Colombo"
                                android:textColor="#666666"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Customer Information Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/customerInfoCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customer Information"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <!-- Total Orders -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Total Orders"
                                android:textColor="#666666"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvTotalOrders"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="12"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Customer Since -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Customer Since"
                                android:textColor="#666666"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvCustomerSince"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="May 2023"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Action Buttons for Detail View -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Deactivate Button -->
                    <Button
                        android:id="@+id/btnDeactivateUser"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Deactivate User"
                        android:textColor="#E91E63"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/chip_bg" />

                    <!-- Edit Button -->
                    <Button
                        android:id="@+id/btnEditUser"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Edit User"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/chip_bg"
                        app:backgroundTint="#E91E63" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>