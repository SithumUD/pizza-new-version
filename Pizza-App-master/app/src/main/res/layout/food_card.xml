<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    android:background="@color/white"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12dp">

        <!-- Food Image -->
        <ImageView
            android:id="@+id/ivFoodImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pizza"
            android:background="@drawable/rounded_image_bg"
            android:clipToOutline="true"
            android:outlineProvider="background"
            />

        <!-- Food Name -->
        <TextView
            android:id="@+id/tvFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivFoodImage"
            android:layout_marginStart="12dp"
            android:text="Margherita"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Food Price -->
        <TextView
            android:id="@+id/tvFoodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tvFoodName"
            android:layout_alignParentEnd="true"
            android:text="LKR 1,200"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark" />

        <!-- Food Description -->
        <TextView
            android:id="@+id/tvFoodDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivFoodImage"
            android:layout_below="@id/tvFoodName"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Fresh tomatoes, mozzarella, basil"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Category Chip -->
        <TextView
            android:id="@+id/tvFoodCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivFoodImage"
            android:layout_below="@id/tvFoodDescription"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/chip_bg"
            android:text="Classic"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <!-- Add Button -->
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvFoodDescription"
            android:layout_marginTop="10dp"
            android:backgroundTint="#E53935"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Add +"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
