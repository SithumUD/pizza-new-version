<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Order Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/orderIdText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM-4892"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/orderStatusBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered"
                    android:textSize="11sp"
                    android:textColor="#10B981"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/orderAmountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LKR 3,600"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#E53E3E" />

        </LinearLayout>

        <!-- Customer Name -->
        <TextView
            android:id="@+id/customerNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amal Fernando"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <!-- Order Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/orderTimeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Today, 2:30 PM"
                android:textSize="13sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/itemCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 items"
                android:textSize="13sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Location -->
        <TextView
            android:id="@+id/orderLocationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colombo City Center"
            android:textSize="13sp"
            android:textColor="#666666"
            android:drawableStart="@drawable/locationicon"
            android:gravity="center"
            android:drawablePadding="4dp"
            app:drawableTint="#666666" />

    </LinearLayout>

</androidx.cardview.widget.CardView>