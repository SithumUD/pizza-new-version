<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image_bg"
            android:layout_marginEnd="16dp"
            tools:src="@drawable/pizza" />

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Product Name and Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Margherita"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    tools:text="Margherita" />

                <TextView
                    android:id="@+id/productStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:textSize="12sp"
                    android:textColor="#48BB78"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    tools:text="Available" />

            </LinearLayout>

            <!-- Product Description -->
            <TextView
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fresh tomatoes, mozzarella, basil"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Fresh tomatoes, mozzarella, basil" />

            <!-- Bottom Row: Category, Price, Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Category Tag -->
                <TextView
                    android:id="@+id/productCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Classic"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="8dp"
                    tools:text="Classic" />

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Price -->
                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LKR 1,200"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#E53E3E"
                    android:layout_marginEnd="12dp"
                    tools:text="LKR 1,200" />

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Edit Button -->
                    <ImageView
                        android:id="@+id/editButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/editicon"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        app:tint="#666666"
                        android:layout_marginEnd="8dp" />

                    <!-- Delete Button -->
                    <ImageView
                        android:id="@+id/deleteButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/deleteicon"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        app:tint="#E53E3E" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>