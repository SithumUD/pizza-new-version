<androidx.cardview.widget.CardView android:id="@+id/cardBranch1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Branch Info -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvBranchName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colombo City Center"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvBranchAddress1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvBranchName1"
                    android:layout_marginTop="5dp"
                    android:text="137 Galle Road, Colombo 03"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvDistance1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvBranchAddress1"
                    android:layout_marginTop="5dp"
                    android:text="5.2 km away"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvStatus1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvBranchAddress1"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/tvDistance1"
                    android:text="Open Now"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imgPin1"
                    android:layout_width="24dp"
                    android:layout_height="34dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/locationicon"
                    app:tint="@android:color/holo_red_dark" />
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>